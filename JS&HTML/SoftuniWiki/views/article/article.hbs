<h1>Welcome to SoftUni Wiki!</h1>
<div class="spacer">
    <h2>{{title}}
        {{#if currentUser}}
        <div class="controls">
            {{#if isLocked}}
            {{else}}
            <a href="/article/edit/{{_id}}">[edit]</a>
            {{/if}}
            <a href="/edit/history/{{_id}}">[history]</a>
        </div>
        {{/if}}
    </h2>
    <article>
        {{#each contents}}
        <p>
            {{this}}
        </p>
        {{/each}}
    </article>
</div>